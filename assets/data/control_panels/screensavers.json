{
  "icon_sprite": "standby_monitor_moon-0",
  "preview": { "type": "screensaver_preview", "width": 320, "height": 200 },
  "elements": [
    { "type": "dropdown", "id": "screensaver_type", "label": "Screen saver", "choices": [
      { "label": "Starfield", "value": "starfield" },
      { "label": "3D Pipes", "value": "pipes" },
      { "label": "3D Model", "value": "model3d" },
      { "label": "3D Text", "value": "text3d" }
    ] },
    { "type": "checkbox", "id": "screensaver_enabled", "label": "Enable screensaver" },

    { "type": "slider", "id": "screensaver_timeout", "label": "Timeout (seconds)", "min": 5, "max": 600, "step": 1, "format": "%ds" },

    { "type": "section", "label": "Starfield options", "when": { "screensaver_type": "starfield" } },
    { "type": "slider", "id": "screensaver_starfield_count", "label": "Count", "min": 1, "max": 1500, "step": 1, "when": { "screensaver_type": "starfield" } },
    { "type": "slider", "id": "screensaver_starfield_speed", "label": "Speed", "min": 1, "max": 400, "step": 1, "when": { "screensaver_type": "starfield" } },
    { "type": "slider", "id": "screensaver_starfield_fov", "label": "FOV", "min": 1, "max": 800, "step": 1, "when": { "screensaver_type": "starfield" } },
    { "type": "slider", "id": "screensaver_starfield_tail", "label": "Tail", "min": 1, "max": 40, "step": 1, "when": { "screensaver_type": "starfield" } },

    { "type": "section", "label": "Pipes options", "when": { "screensaver_type": "pipes" } },
    { "type": "slider", "id": "screensaver_pipes_spawn_min_z", "label": "Min Z", "min": 50, "max": 1000, "step": 1, "when": { "screensaver_type": "pipes" } },
    { "type": "slider", "id": "screensaver_pipes_spawn_max_z", "label": "Max Z", "min": 50, "max": 1000, "step": 1, "when": { "screensaver_type": "pipes" } },
    { "type": "slider", "id": "screensaver_pipes_radius", "label": "Radius", "min": 1.5, "max": 12, "step": 0.1, "format": "%.1f", "when": { "screensaver_type": "pipes" } },
    { "type": "slider", "id": "screensaver_pipes_speed", "label": "Speed", "min": 1, "max": 200, "step": 1, "when": { "screensaver_type": "pipes" } },
    { "type": "slider", "id": "screensaver_pipes_turn_chance", "label": "Turn Chance", "min": 0, "max": 1, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "pipes" } },
    { "type": "checkbox", "id": "screensaver_pipes_avoid_cells", "label": "Avoid cells", "when": { "screensaver_type": "pipes" } },
    { "type": "checkbox", "id": "screensaver_pipes_show_grid", "label": "Show grid", "when": { "screensaver_type": "pipes" } },
    { "type": "slider", "id": "screensaver_pipes_camera_roll", "label": "Roll", "min": 0, "max": 1, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "pipes" } },
    { "type": "slider", "id": "screensaver_pipes_camera_drift", "label": "Drift", "min": 1, "max": 200, "step": 1, "when": { "screensaver_type": "pipes" } },
    { "type": "slider", "id": "screensaver_pipes_pipe_count", "label": "Pipes", "min": 1, "max": 13, "step": 1, "when": { "screensaver_type": "pipes" } },
    { "type": "slider", "id": "screensaver_pipes_grid_step", "label": "Grid Step", "min": 8, "max": 64, "step": 1, "when": { "screensaver_type": "pipes" } },
    { "type": "slider", "id": "screensaver_pipes_fov", "label": "FOV", "min": 1, "max": 800, "step": 1, "when": { "screensaver_type": "pipes" } },
    { "type": "slider", "id": "screensaver_pipes_max_segments", "label": "Max Segments", "min": 10, "max": 2000, "step": 1, "when": { "screensaver_type": "pipes" } },
    { "type": "checkbox", "id": "screensaver_pipes_show_hud", "label": "Show HUD", "when": { "screensaver_type": "pipes" } },

    { "type": "section", "label": "Model options", "when": { "screensaver_type": "model3d" } },
    { "type": "slider", "id": "screensaver_model_grid_lat", "label": "Latitude", "min": 8, "max": 96, "step": 1, "when": { "screensaver_type": "model3d" } },
    { "type": "slider", "id": "screensaver_model_grid_lon", "label": "Longitude", "min": 8, "max": 192, "step": 1, "when": { "screensaver_type": "model3d" } },
    { "type": "slider", "id": "screensaver_model_morph_speed", "label": "Morph Speed", "min": 0, "max": 1, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "model3d" } },
    { "type": "checkbox", "id": "screensaver_model_two_sided", "label": "Two-sided", "when": { "screensaver_type": "model3d" } },

    { "type": "dropdown", "id": "screensaver_model_shape1", "label": "Shape 1", "choices": [
      {"label":"Cube","value":"cube"},
      {"label":"Sphere","value":"sphere"},
      {"label":"Cylinder","value":"cylinder"},
      {"label":"Plane","value":"plane"},
      {"label":"Donut","value":"donut"},
      {"label":"Egg","value":"egg"},
      {"label":"Hat","value":"hat"},
      {"label":"None","value":"none"}
    ], "when": { "screensaver_type": "model3d" } },
    { "type": "dropdown", "id": "screensaver_model_shape2", "label": "Shape 2", "choices": [
      {"label":"Cube","value":"cube"},
      {"label":"Sphere","value":"sphere"},
      {"label":"Cylinder","value":"cylinder"},
      {"label":"Plane","value":"plane"},
      {"label":"Donut","value":"donut"},
      {"label":"Egg","value":"egg"},
      {"label":"Hat","value":"hat"},
      {"label":"None","value":"none"}
    ], "when": { "screensaver_type": "model3d" } },
    { "type": "dropdown", "id": "screensaver_model_shape3", "label": "Shape 3", "choices": [
      {"label":"Cube","value":"cube"},
      {"label":"Sphere","value":"sphere"},
      {"label":"Cylinder","value":"cylinder"},
      {"label":"Plane","value":"plane"},
      {"label":"Donut","value":"donut"},
      {"label":"Egg","value":"egg"},
      {"label":"Hat","value":"hat"},
      {"label":"None","value":"none"}
    ], "when": { "screensaver_type": "model3d" } },
    { "type": "slider", "id": "screensaver_model_scale", "label": "Size", "min": 0.2, "max": 3, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "model3d" } },
    { "type": "slider", "id": "screensaver_model_hold_time", "label": "Hold (s)", "min": 0, "max": 5, "step": 0.1, "format": "%.1f", "when": { "screensaver_type": "model3d" } },
    { "type": "slider", "id": "screensaver_model_tint_r", "label": "Tint R", "min": 0, "max": 1, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "model3d" } },
    { "type": "slider", "id": "screensaver_model_tint_g", "label": "Tint G", "min": 0, "max": 1, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "model3d" } },
    { "type": "slider", "id": "screensaver_model_tint_b", "label": "Tint B", "min": 0, "max": 1, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "model3d" } },

    { "type": "section", "label": "3D Text options", "when": { "screensaver_type": "text3d" } },
    { "type": "text",   "id": "screensaver_text3d_text", "label": "Text", "max": 64, "when": { "screensaver_type": "text3d" } },
    { "type": "checkbox", "id": "screensaver_text3d_use_time", "label": "Use current time", "when": { "screensaver_type": "text3d" } },
    { "type": "slider", "id": "screensaver_text3d_size", "label": "Size", "min": 0.2, "max": 1, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "text3d" } },
    { "type": "slider", "id": "screensaver_text3d_extrude_layers", "label": "Extrude", "min": 0, "max": 40, "step": 1, "when": { "screensaver_type": "text3d" } },
    
    { "type": "dropdown", "id": "screensaver_text3d_color_mode", "label": "Color mode", "choices": [
      {"label":"Solid","value":"solid"}, {"label":"Rainbow","value":"rainbow"}
    ], "when": { "screensaver_type": "text3d" } },
    { "type": "checkbox", "id": "screensaver_text3d_use_hsv", "label": "Use HSV picker", "when": { "screensaver_type": "text3d" } },
    { "type": "slider", "id": "screensaver_text3d_color_r", "label": "Color R", "min": 0, "max": 1, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "text3d", "screensaver_text3d_use_hsv": false } },
    { "type": "slider", "id": "screensaver_text3d_color_g", "label": "Color G", "min": 0, "max": 1, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "text3d", "screensaver_text3d_use_hsv": false } },
    { "type": "slider", "id": "screensaver_text3d_color_b", "label": "Color B", "min": 0, "max": 1, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "text3d", "screensaver_text3d_use_hsv": false } },
    { "type": "slider", "id": "screensaver_text3d_color_h", "label": "Hue", "min": 0, "max": 1, "step": 0.001, "format": "%.3f", "when": { "screensaver_type": "text3d", "screensaver_text3d_use_hsv": true } },
    { "type": "slider", "id": "screensaver_text3d_color_s", "label": "Sat", "min": 0, "max": 1, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "text3d", "screensaver_text3d_use_hsv": true } },
    { "type": "slider", "id": "screensaver_text3d_color_v", "label": "Val", "min": 0, "max": 1, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "text3d", "screensaver_text3d_use_hsv": true } },
    { "type": "slider", "id": "screensaver_text3d_spin_x", "label": "Spin X", "min": 0, "max": 3, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "text3d" } },
    { "type": "slider", "id": "screensaver_text3d_spin_y", "label": "Spin Y", "min": 0, "max": 3, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "text3d" } },
    { "type": "slider", "id": "screensaver_text3d_spin_z", "label": "Spin Z", "min": 0, "max": 3, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "text3d" } },
    { "type": "checkbox", "id": "screensaver_text3d_move_enabled", "label": "Move around", "when": { "screensaver_type": "text3d" } },
    { "type": "dropdown", "id": "screensaver_text3d_move_mode", "label": "Move mode", "choices": [
      {"label":"Orbit","value":"orbit"}, {"label":"Bounce","value":"bounce"}
    ], "when": { "screensaver_type": "text3d", "screensaver_text3d_move_enabled": true } },
    { "type": "slider", "id": "screensaver_text3d_move_radius", "label": "Move radius", "min": 0, "max": 400, "step": 1, "when": { "screensaver_type": "text3d" } },
    { "type": "slider", "id": "screensaver_text3d_move_speed", "label": "Move speed", "min": 0, "max": 2, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "text3d" } },
    { "type": "slider", "id": "screensaver_text3d_bounce_speed_x", "label": "Bounce speed X", "min": 0, "max": 400, "step": 1, "when": { "screensaver_type": "text3d", "screensaver_text3d_move_mode": "bounce" } },
    { "type": "slider", "id": "screensaver_text3d_bounce_speed_y", "label": "Bounce speed Y", "min": 0, "max": 400, "step": 1, "when": { "screensaver_type": "text3d", "screensaver_text3d_move_mode": "bounce" } },
    { "type": "checkbox", "id": "screensaver_text3d_pulse_enabled", "label": "Pulse size", "when": { "screensaver_type": "text3d" } },
    { "type": "slider", "id": "screensaver_text3d_pulse_amp", "label": "Pulse amount", "min": 0, "max": 1, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "text3d" } },
  { "type": "slider", "id": "screensaver_text3d_pulse_speed", "label": "Pulse speed", "min": 0, "max": 3, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "text3d" } },
  { "type": "checkbox", "id": "screensaver_text3d_wavy_baseline", "label": "Wavy baseline", "when": { "screensaver_type": "text3d" } },
  { "type": "slider", "id": "screensaver_text3d_specular", "label": "Specular", "min": 0, "max": 1, "step": 0.01, "format": "%.2f", "when": { "screensaver_type": "text3d" } }
  ]
}
